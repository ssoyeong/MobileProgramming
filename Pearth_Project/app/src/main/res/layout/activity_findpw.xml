<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffe6b3"
    android:orientation="vertical"
    tools:ignore="Deprecated">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">
        <!--        android:background="#F4F3DA"-->

        <TextView
            android:fontFamily="@font/sangsangtitle"
            android:id="@+id/findPW_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            android:text="Find Password"
            android:textSize="40sp"
            android:textColor="#2F571E"/>



        <EditText
            android:fontFamily="@font/sangsangbody"
            android:id="@+id/findPW_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:hint="Enter E-mail"
            android:inputType="textEmailAddress"
            tools:ignore="Suspicious0dp" />

        <Button
            android:fontFamily="@font/sangsangbody"
            android:id="@+id/findPW_btn"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            android:text="Send Email"
            android:textSize="20sp"
            app:backgroundTint="#654040" />
        <TextView
            android:fontFamily="@font/sangsangbody"
            android:text="발송된 이메일을 통해 새로운 비밀번호를 설정하세요."
            android:id="@+id/sended_email"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" />


    </LinearLayout>
</LinearLayout>